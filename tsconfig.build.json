{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    "isolatedModules": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.mdx",
    "**/Introduction.mdx",
    "src/test/**/*"
  ]
}